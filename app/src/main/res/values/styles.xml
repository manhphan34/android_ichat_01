<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextCustom">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="ButtonSignUp" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@color/color_gray</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FloatingActionButtomRoom" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:layout_marginBottom">@dimen/dp_16</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="TextViewProfile">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ButtonProfile">
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:background">@drawable/border_public_room</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
